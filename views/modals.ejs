<!-- Email invite modal-->
<div class="modal fade" tab-index="-1" id="emailInvite" role="dialog" aria-labelledby="sendEmailInvite"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Invite Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="inviteForm">
                    <div class="form-group">
                        <input name="sender" type="text" class="form-control" placeholder="Name" value="" required>
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" placeholder="Enter invitees email addresses ( Comma separated )"
                            name="to" value=""></textarea>
                    </div>
                    <button type="button" onclick="getUserNameClicked()" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Get Name Modal -->
<div class="modal fade" id="getUserName" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">What should everyone call you ?</h5>
                <!--
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                -->
            </div>
            <div class="modal-body">
                <form method="GET">
                    <div class="form-group">
                        <input name="name" type="text" class="form-control" placeholder="Name" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>